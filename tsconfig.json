{
    "compilerOptions": {
        "allowJs": true,
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "declaration": true,
        "outDir": "./build/src",
        "declarationDir": "./declaration/src",
        "experimentalDecorators": true,
        "types": ["jest", "node"],
        "typeRoots": [
            "node_modules/@types"
        ],
        "skipLibCheck": true,
        "lib": [
            "es2015.promise",
            "es2015",
            "dom"
        ],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "tests/*.ts"],
    "exclude": [
        "./cypress.config.ts",
        "./node_modules",
        "./build",
        "./declaration"
    ]
}